<%= form_for @course do |f| %>
  <div class="image-upload col-md-2 col-md-offset-4">
    <div class="image-edit">
      <%= f.file_field :picture, class: "form-control",
        accept: Settings.images_types.collect {|type| ".#{type},"} %>
      <label for="course_picture"></label>
    </div>
    <div class="picture-preview">
      <div id="picture-preview" style="background-image: url('<%= f.object.picture.url %>')">
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= display_error :name %>
  </div>
  <div class="col-md-6">
    <%= f.label :duration_type %>
    <%= f.select :duration_type, Course.duration_types_i18n, {},
      {class: "form-control"} %>
  </div>
  <div class="col-md-6">
    <%= f.label :duration %>
    <%= f.text_field :duration, class: "form-control", type: "number" %>
    <%= display_error :duration %>
  </div>
  <div class="col-md-12">
    <%= f.label :status %>
    <%= f.select :status, Course.status_types_i18n, {},
      {class: "form-control", disabled: active_course_status} %>
  </div>
  <div class="col-md-12">
    <%= f.label :description %>
    <%= f.text_area :description, cols: 30, rows: 4, class: "form-control" %>
    <%= display_error :description %>
  </div>
  <div class="col-md-12 course-subjects ">
    <ul class="nav nav-pills">
      <li class="active">
        <a data-toggle="pill" href="#subject" class="<%= highlight_error_tab :course_subjects %>">
          <%= t "helpers.label.course.course_subjects" %>
        </a>
      </li>
      <li><a data-toggle="pill" href="#menu1" class="<%= highlight_error_tab :course_subjects %>">
        <%= t "helpers.label.course.course_trainee" %>
      </a></li>
      <li><a data-toggle="pill" href="#menu2" class="<%= highlight_error_tab :course_subjects %>">
        <%= t "helpers.label.course.course_supper" %>
      </a></li>
    </ul>
    <div class="tab-content">
      <div id="subject" class="tab-pane fade in active">
        <%= link_to_add_row fa_icon("plus-circle", text: ""), f,
          :course_subjects, class: "btn btn-add-task" %>
        <div class="subject-body">
          <%= display_error :course_subjects, "" %>
          <%= f.fields_for :course_subjects do |cs| %>
            <%= render "courses/course_subject", f: cs %>
          <% end %>
        </div>
      </div>
      <div id="menu1" class="tab-pane fade">
        <table border="1">
          <thead>
          <th>Avatar</th>
          <th>Ho ten</th>
          <th>email</th>
          <th>Gioi tinh</th>
          <th>ngay sinh</th>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>1</td>
              <td>1</td>
              <td>1</td>
              <td>1</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div id="menu2" class="tab-pane fade">
        <h3>Menu 2</h3>
        <p>Some content in menu 2.</p>
      </div>
    </div>
  </div>

  <div class="col-md-3 col-md-offset-4 form-group">
    <%= f.submit class: "form-control btn btn-success" %>
  </div>
<% end %>
