<div class="row task">
  <div class="col-md-11">
    <%= f.select :task_id, @tasks.collect {|sub| [sub.name, sub.id] }, {}, {class: "form-control select-task"} %>
  </div>
  <div class="col-md-1 no-padding">
    <%= f.hidden_field :_destroy %>
    <%= link_to fa_icon("trash", text: ""), nil, class: "remove_record" %>
  </div>
</div>
